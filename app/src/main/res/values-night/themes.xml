<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ServerSideMusicControl" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="SplashImage">
        <item name="lottie_rawRes">@raw/music_light</item>
    </style>

    <style name="Play_Pause">
        <item name="lottie_rawRes">@raw/play_pause_light</item>
